<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pan.dev.dao.UserDao">

    <select id="getUserByUsername" parameterType="string" resultType="com.pan.dev.entity.User">
        SELECT
            *
        FROM
            user u, user_role ur ,role_permission rp
        WHERE
            u.id = ur.user_id AND ur.role_id = rp.role_id AND username = #{username}
    </select>
</mapper>